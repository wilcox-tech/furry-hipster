<% provide :title, 'Wilcox Technologies Press Information' %>
<% provide :meta_desc, 'Press releases, images, and information about Wilcox Technologies, maker of apps for Mac and iPhone.' %>

<h1 class="page-header">Press Information <small>Press releases, images, and information.</small></h1>

<div class="row">
  <div class="span3">
    <div style="text-align:center;">
      <h3>Press Inquiries</h3>
      <h4>+1 (415) 484-WT-PR (9877)</h4>
    </div>
    
    <!-- Hard line breaks make Corgi sad, but it is necessary to look right. -->
    <br/>
    
    <p>Not a member of the press?  See <a href="/about/contact" title="How to Contact Us">how to contact us</a>.</p>
    
    <address><b>Wilcox Technoloiges LLC</b><br/>
    719 Sunny Pine Way Suite H1<br/>
    Greenacres, Florida 33415<br/>
    United States</address>
  </div>
  <div class="span6">
    <h2>Press Releases</h2>
    <dl class="dl-horizontal">
    <% @releases.each {|pr| %>
      <dt><%= pr.updated_at.strftime('%F') %></dt>
      <dd><h4><a href="/pr/<%= pr.id %>"><%= pr.headline %></a></h4></dd>
    <% } %>
    </dl>
  </div>
  <div class="span3">
    <div class="well" style="padding: 8px 0;">
      <ul class="nav nav-list">
        <li class="nav-header">Resources for the Press</li>
